# ACRCloud API credentials
# Sign up at https://www.acrcloud.com/ (free tier: 100 calls/day)
# Copy this file to .env and fill in your credentials
ACRCLOUD_HOST=identify-eu-west-1.acrcloud.com
ACRCLOUD_ACCESS_KEY=your_access_key_here
ACRCLOUD_ACCESS_SECRET=your_access_secret_here

# Optional: Manual time offset in milliseconds (positive = lyrics ahead, negative = lyrics behind)
TIME_OFFSET_MS=0

# Recognition interval in seconds (higher = less API calls, lower = faster detection)
RECOGNITION_INTERVAL=45

